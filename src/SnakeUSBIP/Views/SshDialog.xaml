<Window x:Class="SnakeUSBIP.Views.SshDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SSH - Configure USB/IP Server" 
        Height="450" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!-- Instructions -->
        <TextBlock x:Name="txtInstructions" Grid.Row="0"
                   Foreground="#C8C8C8" FontFamily="Consolas" FontSize="9"
                   TextWrapping="Wrap"/>
        
        <!-- Connection Panel -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="4">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="lblUser" Grid.Column="0" Text="User:" 
                           Foreground="White" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUser" Grid.Column="1" Text="pi" 
                         Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="@" Foreground="White" 
                           VerticalAlignment="Center" Margin="10,0"/>
                <TextBox x:Name="txtIP" Grid.Column="3" 
                         VerticalAlignment="Center"/>
                <Button x:Name="btnConnect" Grid.Column="4" Content="ðŸ”— Connect"
                        Background="#007ACC" Foreground="White" 
                        Width="90" Height="28" Margin="10,0,0,0"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnConnect_Click"/>
            </Grid>
        </Border>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="btnCopy" Content="ðŸ“‹ Copy commands"
                    Background="#3E3E42" Foreground="White"
                    Width="130" Height="28" BorderThickness="0" Cursor="Hand"
                    Click="BtnCopy_Click"/>
            <Button x:Name="btnClose" Content="Close"
                    Background="#3E3E42" Foreground="White"
                    Width="70" Height="28" BorderThickness="0" Cursor="Hand"
                    Margin="10,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
