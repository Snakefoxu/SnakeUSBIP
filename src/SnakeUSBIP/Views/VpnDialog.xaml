<Window x:Class="SnakeUSBIP.Views.VpnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VPN / Remote Network" 
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- VPN Status -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="lblStatus" Text="Network status:" Foreground="#C8C8C8"/>
            <TextBlock x:Name="lblStatusValue" Text="Checking..." Foreground="#569CD6" Margin="10,0,0,0"/>
        </StackPanel>
        
        <!-- Download buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="btnTailscale" Content="ðŸ“¥ Tailscale"
                    Background="#4B0082" Foreground="White"
                    Width="100" Height="28" BorderThickness="0" Cursor="Hand"
                    Click="BtnTailscale_Click"/>
            <Button x:Name="btnZeroTier" Content="ðŸ“¥ ZeroTier"
                    Background="#4B0082" Foreground="White"
                    Width="100" Height="28" BorderThickness="0" Cursor="Hand"
                    Margin="10,0,0,0" Click="BtnZeroTier_Click"/>
        </StackPanel>
        
        <!-- Peers list -->
        <Border Grid.Row="2" Background="#252526">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" x:Name="lblPeers" Text="Peers on network:" 
                           Foreground="#569CD6" FontWeight="Bold" Margin="5"/>
                <ListView Grid.Row="1" x:Name="lstPeers" 
                          Background="#252526" Foreground="#C8C8C8" BorderThickness="0"/>
            </Grid>
        </Border>
        
        <!-- Action buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="btnAddAll" Content="Add All"
                    Background="#3E3E42" Foreground="White"
                    Width="80" Height="28" BorderThickness="0" Cursor="Hand"
                    Click="BtnAddAll_Click"/>
            <Button x:Name="btnConnect" Content="Connect"
                    Background="#008080" Foreground="White"
                    Width="80" Height="28" BorderThickness="0" Cursor="Hand"
                    Margin="10,0,0,0" Click="BtnConnect_Click"/>
        </StackPanel>
        
        <!-- Info -->
        <TextBlock Grid.Row="4" x:Name="lblInfo" 
                   Text="â„¹ï¸ Connect with other users via Tailscale or ZeroTier"
                   Foreground="#969696" FontSize="9" Margin="0,10,0,0"/>
    </Grid>
</Window>
